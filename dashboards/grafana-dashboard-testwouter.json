{
  "id": null,
  "title": "SSL Monitor Dashboard",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "tags": ["ssl", "blackbox"],
  "panels": [
    {
      "type": "row",
      "title": "HTTP Status & SSL Expiry",
      "collapsed": false,
      "id": 1,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "HTTP Up",
      "id": 2,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 1
      },
      "targets": [
        {
          "expr": "probe_success{job=\"blackbox\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Down" }, "1": { "text": "Up" } } }
          ]
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "SSL Certificate Expiry (Days Left)",
      "id": 3,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 7
      },
      "targets": [
        {
          "expr": "(probe_ssl_earliest_cert_expiry{job=\"blackbox\"} - time()) / 86400",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "d",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 7 },
              { "color": "orange", "value": 14 },
              { "color": "green", "value": 30 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "table",
      "title": "SSL Certificate Expiration Dates",
      "id": 4,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 15
      },
      "targets": [
        {
          "expr": "probe_ssl_earliest_cert_expiry{job=\"blackbox\"}",
          "refId": "A",
          "legendFormat": "{{instance}}"
        },
        {
          "expr": "(probe_ssl_earliest_cert_expiry{job=\"blackbox\"} - time()) / 86400",
          "refId": "B",
          "legendFormat": "{{instance}}"
        }
      ],
      "pluginVersion": "10.4.0",
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "sortBy": [
          {
            "displayName": "Days until expiry",
            "desc": false
          }
        ]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 14 },
              { "color": "red", "value": 7 }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Value #A" },
            "properties": [
              { "id": "displayName", "value": "Expiry Date" },
              { "id": "unit", "value": "dateTimeAsLocal" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Value #B" },
            "properties": [
              { "id": "displayName", "value": "Days until expiry" },
              { "id": "decimals", "value": 0 }
            ]
          }
        ]
      }
    }
  ]
}

