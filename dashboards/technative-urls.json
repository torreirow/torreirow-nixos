{
  "id": null,
  "title": "TechNative URLs Monitor",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "tags": ["ssl", "blackbox", "technative"],
  "panels": [
    {
      "type": "row",
      "title": "URL Status",
      "collapsed": false,
      "id": 1,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "gauge",
      "title": "HTTP Status",
      "id": 2,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 1
      },
      "targets": [
        {
          "expr": "probe_success{job=\"blackbox\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Down", "color": "red" }, "1": { "text": "Up", "color": "green" } } }
          ],
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      }
    },
    {
      "type": "row",
      "title": "SSL Certificate Expiry",
      "collapsed": false,
      "id": 3,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 10
      }
    },
    {
      "type": "gauge",
      "title": "SSL Certificate Expiry (Days Left)",
      "id": 4,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 11
      },
      "targets": [
        {
          "expr": "(probe_ssl_earliest_cert_expiry{job=\"blackbox\"} - time()) / 86400",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 90,
          "unit": "d",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "red", "value": 7 },
              { "color": "orange", "value": 14 },
              { "color": "green", "value": 30 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      }
    }
  ]
}
